# 10xStudent Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string with pgvector support
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/10xstudent"

# ============================================
# AUTHENTICATION (Clerk)
# ============================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# ============================================
# AI SERVICES
# ============================================
# Google AI API Key for Gemini and text-embedding-004
# Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="AIza..."

# Tavily API Key for web search
# Get from https://tavily.com
TAVILY_API_KEY="tvly-..."

# ============================================
# REDIS (for BullMQ background jobs)
# ============================================
REDIS_HOST="localhost"
REDIS_PORT="6380"
REDIS_PASSWORD=""
# Or use a full connection URL
# REDIS_URL="redis://localhost:6380"

# ============================================
# API CONFIGURATION
# ============================================
# API base URL for frontend
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL="info"

# ============================================
# SECURITY
# ============================================
# Secret for securing cron endpoints (generate with: openssl rand -hex 32)
CRON_SECRET="your-random-secret-here"

# ============================================
# OPTIONAL: DEVELOPMENT
# ============================================
# Set to "development" or "production"
NODE_ENV="development"

# Enable debug mode
# DEBUG="*"
