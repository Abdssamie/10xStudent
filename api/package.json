    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@hono/zod-validator": "^0.7.6",
    "@tanstack/ai": "^0.4.2",
    "@tanstack/ai-gemini": "^0.4.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "pino": "^10.3.0",
    "postgres": "^3.4.8",
    "sanitize-filename": "^1.6.3",
    "svix": "^1.15.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "bun-types": "^1.3.8",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
