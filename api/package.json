{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:integration": "vitest tests/**/*.integration.test.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "credits:refresh": "bun run scripts/refresh-credits.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@hono/zod-validator": "^0.7.6",
    "@sentry/node": "^10.39.0",
    "@tanstack/ai": "^0.5.0",
    "@tanstack/ai-gemini": "^0.4.0",
    "@tanstack/ai-openai": "^0.5.0",
    "@tanstack/ai-react": "^0.5.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "pino": "^10.3.1",
    "postgres": "^3.4.8",
    "sanitize-filename": "^1.6.3",
    "svix": "^1.15.0",
    "voyageai": "^0.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.11.0",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^25.2.3",
    "bun-types": "^1.3.8",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
