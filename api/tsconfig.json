{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "types": [
      "bun-types"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared": [
        "../shared"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/integration.setup.ts",
    "tests/**/*.integration.test.ts"
  ]
}